{
  "name": "@letanure/resend-cli",
  "version": "0.1.2",
  "description": "A command-line interface for Resend email API",
  "main": "dist/src/cli.js",
  "bin": {
    "resend-cli": "./dist/src/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letanure/resend-cli.git"
  },
  "bugs": {
    "url": "https://github.com/letanure/resend-cli/issues"
  },
  "homepage": "https://github.com/letanure/resend-cli#readme",
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/src/cli.js",
    "build:watch": "tsc --watch",
    "dev": "tsx --watch src/cli.tsx",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "resend",
    "email",
    "cli",
    "command-line",
    "api",
    "typescript",
    "ink",
    "react"
  ],
  "author": "letanure",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "ink": "^6.0.1",
    "react": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "semantic-release": "^24.2.6",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  }
}
